<div class="signup-form-container">
    <form class="card" method="POST" action="/signup">
        <h1>Crie uma conta</h1>
        <input name="name" placeholder="Nome" class="input" required />
        <input name="email" placeholder="Email" class="input" required />
        <input name="password" placeholder="Senha" type="password" class="input" required />
        <button type="submit" class="btn">Criar conta</button>
        <% if flash[:notice] %> <span><%= flash[:notice] %></span> <% end %>
        <div class="signup-footer">
            <a href="/entrar">JÃ¡ possui conta?</a>
        </div>
    </form>
</div>